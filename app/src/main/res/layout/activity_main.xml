<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="adneom.poc_al.MainActivity">

    <TextView
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:text="ALONZO"
        android:gravity="center"
        android:textSize="60dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:id="@+id/textView3" />


    <TextView
    android:layout_width="310dp"
    android:layout_height="64dp"
        android:textColor="@color/btn_dash_text_default"
        android:background="@color/btn_dash_background_default"
    android:text="@string/install_app_emoji"
    android:gravity="center_horizontal|center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginBottom="8dp"
    android:layout_marginRight="8dp"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_marginLeft="8dp"
    app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/btn_install_app"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.07"
        app:layout_constraintHorizontal_bias="0.506" />

    <TextView
        android:layout_width="310dp"
        android:layout_height="68dp"
        android:textColor="@color/btn_dash_text_default"
        android:background="@color/btn_dash_background_default"
        android:text="@string/alonzo_merch"
        android:gravity="center_horizontal|center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_install_app"
        app:layout_constraintVertical_bias="0.159"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:id="@+id/btn_merch" />

    <TextView
        android:layout_width="317dp"
        android:layout_height="71dp"
        android:text="@string/alonzo_fr"
        android:textColor="@color/btn_dash_text_default"
        android:background="@color/btn_dash_background_default"
        android:gravity="center_horizontal|center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="0.266"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:id="@+id/btn_site"
        app:layout_constraintTop_toBottomOf="@+id/btn_merch" />


    <ImageView
        android:id="@+id/btn_snapchat"
        android:layout_width="63dp"
        android:layout_height="31dp"
        android:src="@drawable/ic_poc_social_24dp"
        android:layout_marginLeft="-1dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="4dp"
        tools:layout_editor_absoluteY="568dp" />

    <ImageView
        android:id="@+id/btn_settings"
        android:layout_width="62dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_settings_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="4dp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="568dp"
        tools:layout_editor_absoluteX="345dp" />

</android.support.constraint.ConstraintLayout>
